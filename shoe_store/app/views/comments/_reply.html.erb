<%= form_for([@product, @product.comments.build], html: { class: "hidden"}) do |f| %>
  <%= f.text_field :content, id: "field#{comment_id}", class: "reply-field"%><br />
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :product_id, value: product_id %>
  <%= f.hidden_field :comment_id, value: comment_id %>
  <%= f.submit value: "reply", class: 'hidden', id: "send#{comment_id}" %>
<% end %>
