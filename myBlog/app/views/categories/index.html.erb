<h1>Listing Category </h1>
<table>
  <tr>
    <th><strong>Title</strong></th>
    <th colspan="2"></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.namecategory, edit_category_path(category) %></td>
      <td><%= link_to 'Destroy', category_path(category),
                                  method: :delete %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New category', new_category_path %><br>
<%= link_to 'Back To Posts', posts_path %>